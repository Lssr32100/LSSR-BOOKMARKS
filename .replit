modules = ["kotlin", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["python311Packages.tkinter"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Android Build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "android-app"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Bookmark Manager Web App"

[[workflows.workflow]]
name = "Android Build"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew build"
waitForPort = 5000

[[workflows.workflow]]
name = "android-app"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew installDebug && adb shell am start -n com.bookmarkmanager/.MainActivity"

[[workflows.workflow]]
name = "Bookmark Manager Web App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "./gradlew build"]

[[ports]]
localPort = 5000
externalPort = 80
